<project type="egg">
  <namespaces>
    <package name="reahl"/>
  </namespaces>
  
  <deps purpose="build">
    <thirdpartyegg name="setuptools-git" minversion="1.1" maxversion="1.1.999"/>
    <thirdpartyegg name="pytest-runner"/>
  </deps>

  <deps purpose="run">
    <egg name="reahl-component"/>
    <thirdpartyegg name="psycopg2" minversion="2.5" maxversion="2.5.9999"/>
  </deps>

  <deps purpose="test">
    <thirdpartyegg name="pytest" minversion="3.0" maxversion="3.9999"/>
  </deps>

  <export entrypoint="reahl.component.databasecontrols" name="PostgresqlControl" locator="reahl.postgresqlsupport:PostgresqlControl"/>

  <alias name="unit" command="setup -- -q pytest --addopts '-s'"/>

  <distpackage type="wheel">
    <packageindex repository="pypi"/>
  </distpackage>
  <distpackage type="sdist">
    <packageindex repository="pypi"/>
  </distpackage>

</project>
